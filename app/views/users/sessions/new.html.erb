<div class="login-container">
  <h2 class="login-header">Log in</h2>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div id="login-check-box" class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit("Log in", class: "login-submit-button") %>
    </div>
  <% end %>

  <div class="shared-links">
    <%= render "users/shared/links" %>
  </div>
  </div>

