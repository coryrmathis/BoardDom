<h1>Games Index</h1>

<% @games.each_slice(3) do |game| %>
  <div class='games-row'>
  <% game.each do |game| %>
    <div class="game-wrapper">
      <div class='cover-images'>
        <a href="/games/<%=game.id%>">
          <img src=<%=game.image_url%>  alt=".." />
        </a>
      </div>
      <div class='buttons'>
      <a class='vote-links vote-up apply-font' href="/votes">Vote Up</a>
      <a class='vote-links vote-down apply-font' href="/votes">Vote Down</a>
      <a class='vote-links i-own-this apply-font' href="/games">Vote I Own This</a>

       </div>
    </div>
    <%end%>
  </div>
<%end%>

